{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "sourceMap": false,
    "target": "es5",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["esnext"],
    "types": ["node"],
    "rootDir": "src",
    "declaration": true
  },
  "include": [
    "src/*.ts"
  ]
}